{
    "compilerOptions": {
        "outDir": ".",
        "sourceMap": false,
        "module": "commonjs",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
    ]
}
